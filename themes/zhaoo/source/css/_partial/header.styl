// Menu
.menu
  position fixed
  width 100%
  height 100%
  top 0
  background-color rgba(255, 255, 255, 0.7)
  z-index 50
  display none
  .menu-close
    position absolute
    color $color-link
    font-size 2em
    right 30px
    top 30px
    cursor pointer
  .menu-content
    width 100%
    height 100%
    text-align center
    padding 0
    @media (max-width: 576px)
      position relative
      top 50%
      transform translateY(-25%)
    .menu-item
      font-size 2em
      display inline-block
      margin 20px
      margin-top 200px
      @media (max-width: 576px)
        display block
        margin 10px
  .menu-copyright
    position absolute
    bottom 20px
    width 100%
    text-align center
    @media (max-width: 576px)
      font-size 0.75em